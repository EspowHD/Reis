<resources>

    <style name="LightAppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorOffWhite</item>
        <item name="base_background_color">@color/colorWhite</item>
        <item name="nav_color">@color/colorOffWhite</item>
        <item name="icons_color">@color/colorLightGray</item>
        <item name="text_color">@color/colorDarkGray</item>
        <item name="hint_text_color">@color/colorLightGray</item>
        <item name="clicked_icons_color">@color/colorBlack</item>
        <item name="buttons_color">@color/colorBlack</item>

        <item name="nav_margin">-8dp</item>

        <item name="materialButtonStyle">@style/DefaultButtonStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DefaultDialogTextStyle</item>
    </style>

    <style name="LightAppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorOffWhite</item>
        <item name="base_background_color">@color/colorWhite</item>
        <item name="nav_color">@color/colorOffWhite</item>
        <item name="icons_color">@color/colorLightGray</item>
        <item name="text_color">@color/colorDarkGray</item>
        <item name="hint_text_color">@color/colorLightGray</item>
        <item name="clicked_icons_color">@color/colorBlack</item>
        <item name="buttons_color">@color/colorBlack</item>

        <item name="materialButtonStyle">@style/DefaultButtonStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DefaultDialogTextStyle</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/hint_text_color</item>
        <item name="startIconTint">?attr/buttons_color</item>
        <item name="boxStrokeColor">?attr/buttons_color</item>
    </style>

    <style name="DefaultButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/futura_regular</item>
        <item name="backgroundTint">?attr/buttons_color</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DefaultTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/futura_regular</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="DefaultCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="backgroundColor">?attr/base_background_color</item>
    </style>

    <style name="DefaultDialogTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/futura_regular</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>
</resources>